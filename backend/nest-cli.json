{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger"
    ],
    "assets": [
      "mail/templates/**/*",
      {
        "include": "translations/**/*",
        "watchAssets": true,
        "outDir": "dist/"
      }
    ],
    "watchAssets": true
  }
}

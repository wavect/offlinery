{
    "name": "backend",
    "version": "0.0.1",
    "description": "",
    "author": "Wavect GmbH",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "NODE_ENV=development nest start --watch",
        "start:devwin": "set NODE_ENV=development && nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --silent --forceExit",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:cov": "jest --coverage --detectOpenHandles",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:unit": "jest --testRegex=\"/test/unit/.*\\.spec\\.ts$\" --silent",
        "test:integration": "jest --testRegex=\"/test/integration/.*\\.spec\\.ts$\"",
        "test:coverage": "pnpm test -- --coverage",
        "test:badges": "pnpm run test:coverage  && jest-coverage-badges",
        "openapi:generate": "npx @openapitools/openapi-generator-cli generate -i ./swagger.json -g typescript-fetch -o ../mobile/api/gen/ -c openapi-config.json -t ./custom-templates && cd .. && pnpm run format:all",
        "pre-commit": "pnpm run format && pnpm run lint",
        "typeorm": "ts-node ./node_modules/typeorm/cli",
        "migration:run": "pnpm run typeorm migration:run -- -d ./src/typeorm.config.ts",
        "migration:generate": "pnpm run typeorm -- -d ./src/typeorm.config.ts migration:generate ./src/migrations/$npm_config_name",
        "migration:create": "pnpm run typeorm -- migration:create ./src/migrations/$npm_config_name",
        "migration:revert": "pnpm run typeorm -- -d ./src/typeorm.config.ts migration:revert"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^2.0.2",
        "@nestjs/cache-manager": "^2.2.2",
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/serve-static": "^4.0.2",
        "@nestjs/swagger": "^7.4.0",
        "@nestjs/throttler": "^6.0.0",
        "@nestjs/typeorm": "^10.0.2",
        "bcrypt": "^5.1.1",
        "cache-manager": "^5.7.4",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.5",
        "expo-server-sdk": "^3.10.0",
        "geo-tz": "^8.0.2",
        "geojson": "^0.5.0",
        "handlebars": "^4.7.8",
        "helmet": "^7.1.0",
        "nestjs-i18n": "^10.4.5",
        "nodemailer": "^6.9.14",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.20",
        "uuid": "^10.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.17",
        "@types/geojson": "^7946.0.14",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.15",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "glob": "^11.0.0",
        "jest": "^29.5.0",
        "jest-coverage-badges": "^1.1.2",
        "jest-mock-extended": "4.0.0-beta1",
        "prettier": "^3.0.0",
        "prettier-plugin-organize-imports": "^4.0.0",
        "source-map-support": "^0.5.21",
        "sqlite3": "^5.1.7",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "roots": [
            "<rootDir>/src",
            "<rootDir>/test"
        ],
        "testTimeout": 10000,
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "^@/utils/env.utils$": "<rootDir>/src/__mocks__/mock-env.config.ts"
        },
        "setupFilesAfterEnv": [
            "<rootDir>/src/__mocks__/jest.setup.ts"
        ],
        "testRegex": "(/tests?/.*|(\\.|/)(spec))\\.ts$",
        "testPathIgnorePatterns": [
            "<rootDir>/test/unit/_src/",
            "<rootDir>/test/_src/",
            "<rootDir>/test/_config/"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.(t|j)s",
            "!src/seeder/**/*.(t|j)s",
            "!src/**/*.seeder.(t|j)s",
            "!src/**/*.dto.(t|j)s",
            "!src/**/*.module.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ]
    }
}

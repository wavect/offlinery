{
    "name": "offlinery",
    "version": "1.0.0",
    "main": "expo/AppEntry.js",
    "scripts": {
        "start": "expo start",
        "start:dev": "EXPO_PUBLIC_ENVIRONMENT=development pnpm start",
        "start:devwin": "set EXPO_PUBLIC_ENVIRONMENT=development && pnpm start",
        "start:prod": "expo start --no-dev --minify",
        "start:tunnel": "expo start --tunnel",
        "android": "expo run:android",
        "ios": "EXPO_PUBLIC_ENVIRONMENT=development expo run:ios",
        "ios:dev": "EXPO_PUBLIC_ENVIRONMENT=development expo run:ios",
        "ios:clean": "rm -rf ios/Pods && rm -rf ios/build",
        "web": "expo start --web",
        "install:all": "pnpm i && npx expo install --fix",
        "pre-commit": "npx prettier . --write",
        "e2e:ios:build": "expo run:ios --configuration Release",
        "e2e:ios:start-simulator": "xcrun simctl boot 'iPhone 14'",
        "e2e:ios:install": "xcrun simctl install booted ios/build/Build/Products/Release-iphonesimulator/Offlinery.app",
        "e2e:ios:run": "EXPO_PUBLIC_ENVIRONMENT=production maestro test -e APP_PATH=ios/build/Build/Products/Release-iphonesimulator/Offlinery.app -e EXPO_PUBLIC_ENVIRONMENT=${EXPO_PUBLIC_ENVIRONMENT} ./tests/e2e/ios/login-flow.yaml",
        "e2e:ios:test": "npm run e2e:ios:run"
    },
    "dependencies": {
        "@expo-google-fonts/montserrat": "^0.2.3",
        "@expo/html-elements": "^0.10.1",
        "@expo/metro-config": "~0.18.11",
        "@expo/metro-runtime": "~3.2.3",
        "@expo/vector-icons": "^14.0.3",
        "@react-native-community/datetimepicker": "8.0.1",
        "@react-native-community/slider": "4.5.2",
        "@react-navigation/bottom-tabs": "^6.6.1",
        "@react-navigation/native": "^6.1.18",
        "@react-navigation/stack": "^6.4.1",
        "@sentry/react-native": "^5.22.3",
        "expo": "~51.0.31",
        "expo-build-properties": "~0.12.5",
        "expo-checkbox": "~3.0.0",
        "expo-constants": "^16.0.2",
        "expo-font": "~12.0.10",
        "expo-image-picker": "~15.0.7",
        "expo-linear-gradient": "~13.0.2",
        "expo-localization": "~15.0.3",
        "expo-location": "~17.0.1",
        "expo-notifications": "~0.28.17",
        "expo-secure-store": "~13.0.2",
        "expo-splash-screen": "~0.27.5",
        "expo-status-bar": "~1.12.1",
        "expo-task-manager": "~11.8.2",
        "i18n-js": "^4.4.3",
        "jwt-decode": "^4.0.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-native": "0.74.5",
        "react-native-element-dropdown": "^2.12.1",
        "react-native-error-boundary": "^1.2.4",
        "react-native-gesture-handler": "^2.16.2",
        "react-native-maps": "1.14.0",
        "react-native-mmkv": "^2.12.2",
        "react-native-ratings": "^8.1.0",
        "react-native-reanimated": "3.10.1",
        "react-native-reanimated-carousel": "^3.5.1",
        "react-native-safe-area-context": "4.10.5",
        "react-native-screens": "3.31.1",
        "react-native-web": "~0.19.10",
        "expo-updates": "~0.25.24",
        "react-native-webview": "13.8.6"
    },
    "devDependencies": {
        "prettier-plugin-organize-imports": "^4.0.0",
        "@expo/ngrok": "^4.1.3",
        "@types/react": "~18.2.45",
        "prettier": "^3.3.3",
        "typescript": "^5.3.3"
    },
    "private": true
}
